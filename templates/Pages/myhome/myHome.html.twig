{% extends 'base.html.twig' %}

{% block title %}Liste d'anime à regarder{% endblock %}

{% block body %}
<div class = "container mt-4">
    <h1 class= "text-5xl text-center mt-24 mb-8">Bienvenue sur votre liste d'animés !</h1>
      <div class="flex flex-row flex-wrap justify-evenly mt-8"><p class = "text-center mt-4"></p>
        <div class="row mt-4">

        {% for anime in watchList.anime %}
   
        <div class="card mt-4">
  
          <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="175" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
            <rect width="100%" height="100%" fill="#868e96"></rect>
            <text x="50%" y="50%" fill="#dee2e6" dy=".3em">{{anime.name}}</text>
           </svg>
  
  
          <div class="card-body mx-auto"><p>Genre: {{anime.category.name}}</p>
              <p class="card-text">{{anime.description}}</p> 
              <p>Année: {{anime.period}}</p>
          </div>
        </div>
        
        
        
  
        {% endfor %}
       </div>   </div> 
   
   

>   
        
      
    
</div>
<div class="navigation d-flex justify-content-center mt-4">

</div>

{% endblock %}
