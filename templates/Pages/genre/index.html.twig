{% extends 'base.html.twig' %}

{% block title %}AnimeToWatch - Genres{% endblock %}

{% block body %} 
<main role="main">
<div class="album py-5">
  <div class = "container-fluid mt-4 ">
<h1 class = "d-flex justify-content-center" >Les Genres</h1> 
    <div class="row mt-4">

{% for Category in Categories %}

         <div class = "col-md-4 mt-4">
            <div class="card shadow-sm">
            <a href= "{{ path('category.index', { 'slug' :Category.name}) }}" >
              <img  src = "{{Category.image}}" class="bd-placeholder-img card-img-top" width="100%" height="225">
             </a> 
                 
         </div><div class = "d-flex justify-content-center mt-4"><h5 class="fst-italic">{{Category.Name}}</h5></div>
     </div>


    {% endfor %}  
    
    <div>
  </div>

</div>
<div class="navigation d-flex justify-content-center mt-4">
    {{ knp_pagination_render(Categories) }}
</div>

{% endblock %}
