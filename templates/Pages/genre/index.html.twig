{% extends 'base.html.twig' %}

{% block title %}AnimeToWatch - Genres{% endblock %}

{% block body %}
  <div class = "container mt-4 ">
  <h1 class = "d-flex justify-content-center" >Les Cat√©gories</h1> 

  <div class= "count mt-4">
   Il y a actuellement {{genres.getTotalItemCount}} genres sur le site: 
  </div>
  <table class="table table-hover  mt-4">
  <thead>
    <tr>
      <th scope="col">Nom</th>
      <th scope="col">Description</th>
    </tr>
  </thead>
  <tbody>
  {% for genre in genres %}
    <tr class="table-dark ">
      <th scope="row">{{genre.Name}}</th>
      <td>{{genre.Description}}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>
<div class="navigation d-flex justify-content-center mt-4">
    {{ knp_pagination_render(genres) }}
</div>
</div>
{% endblock %}